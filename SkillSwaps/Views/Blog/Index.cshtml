@{
    Layout = null;
    ViewBag.Title = "Index";
}
@using System.Web.Optimization

<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Courses | Education</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="~/Content/site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets/img/favicon.ico">

    @Styles.Render("~/Content/assets/scss")
    @Styles.Render("~/Content/assets/css")
</head>

<body>
    <!--? Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="~/Content/assets/img/logo/loder.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader End -->

    @Html.Partial("_Header")

    <main>
        <!-- Slider Area Start -->
        <section class="slider-area slider-area2">
            <div class="slider-active">
                <div class="single-slider slider-height2">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-8 col-lg-11 col-md-12">
                                <div class="hero__caption hero__caption2">
                                    <h1 data-animation="bounceIn" data-delay="0.2s">Evenimente și Workshopuri</h1>
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="~/">Acasă</a></li>
                                            <li class="breadcrumb-item"><a href="#">Evenimente</a></li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Slider Area End -->
        <!-- Blog & Sidebar Start -->
        <section class="blog_area section-padding">
            <div class="container">
                <div class="row">
                    <!-- Blog Posts -->
                    <div class="col-lg-8 mb-5 mb-lg-0">
                        <div class="blog_left_sidebar">
                            <!-- Eveniment 1 -->
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    <img class="card-img rounded-0" src="~/Content/assets/img/blog/Hackathon-01-1.png" alt="">
                                    <a href="#" class="blog_item_date">
                                        <h3>15</h3>
                                        <p>Martie</p>
                                    </a>
                                </div>
                                <div class="blog_details">
                                    <a class="d-inline-block" href="~/Blog/Ev1">
                                        <h2 class="blog-head" style="color: #2d2d2d;">Hackathon pentru Începători în IT</h2>
                                    </a>
                                    <p>Un eveniment intensiv de programare unde participanții vor învăța bazele coding-ului și vor crea un proiect funcțional într-o zi.</p>
                                </div>
                            </article>

                            <!-- Eveniment 2 -->
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    <img class="card-img rounded-0" src="~/Content/assets/img/blog/mathc.jpg" alt="">
                                    <a href="#" class="blog_item_date">
                                        <h3>20</h3>
                                        <p>Martie</p>
                                    </a>
                                </div>
                                <div class="blog_details">
                                    <a class="d-inline-block" href="~/Blog/Ev2">
                                        <h2 class="blog-head" style="color: #2d2d2d;">Matematica Distractivă – Atelier pentru Elevi</h2>
                                    </a>
                                    <p>O sesiune interactivă unde copiii descoperă matematică prin jocuri logice și provocări captivante.</p>
                                </div>
                            </article>

                            <!-- Eveniment 3 -->
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    <img class="card-img rounded-0" src="~/Content/assets/img/blog/Concurs-sah.jpg" alt="">
                                    <a href="#" class="blog_item_date">
                                        <h3>5</h3>
                                        <p>Aprilie</p>
                                    </a>
                                </div>
                                <div class="blog_details">
                                    <a class="d-inline-block" href="~/Blog/Ev3">
                                        <h2 class="blog-head" style="color: #2d2d2d;">Turneu de Șah pentru Începători și Avansați</h2>
                                    </a>
                                    <p>Competiție deschisă tuturor pasionaților de șah, cu premii și sesiuni de analiză a partidelor împreună cu experți.</p>
                                </div>
                            </article>

                            <!-- Eveniment 4 -->
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    <img class="card-img rounded-0" src="~/Content/assets/img/blog/design-grafic.jpg" alt="">
                                    <a href="#" class="blog_item_date">
                                        <h3>12</h3>
                                        <p>Aprilie</p>
                                    </a>
                                </div>
                                <div class="blog_details">
                                    <a class="d-inline-block" href="~/Blog/Ev4">
                                        <h2 class="blog-head" style="color: #2d2d2d;">Curs de Design Grafic cu Adobe Illustrator</h2>
                                    </a>
                                    <p>Workshop practic unde participanții învață să creeze logo-uri, bannere și alte elemente vizuale profesionale.</p>
                                </div>
                            </article>

                            <!-- Eveniment 5 -->
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    <img class="card-img rounded-0" src="~/Content/assets/img/blog/inteligenta artificiala.jpg" alt="">
                                    <a href="#" class="blog_item_date">
                                        <h3>20</h3>
                                        <p>Aprilie</p>
                                    </a>
                                </div>
                                <div class="blog_details">
                                    <a class="d-inline-block" href="~/Blog/Ev5">
                                        <h2 class="blog-head" style="color: #2d2d2d;">Seminar: Inteligența Artificială și Viitorul Locurilor de Muncă</h2>
                                    </a>
                                    <p>O discuție deschisă cu specialiști în AI despre cum tehnologia transformă piața muncii și ce competențe vor fi esențiale în viitor.</p>
                                </div>
                            </article>

                            <!-- Paginare -->
                            <nav class="blog-pagination justify-content-center d-flex">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a href="#" class="page-link" aria-label="Previous"><i class="ti-angle-left"></i></a>
                                    </li>
                                    <li class="page-item"><a href="~/Blog/Index" class="page-link">1</a></li>
                                    <li class="page-item active"><a href="~/Blog/Evpag2" class="page-link">2</a></li>
                                    <li class="page-item"><a href="~/Blog/Evpag2" class="page-link" aria-label="Next"><i class="ti-angle-right"></i></a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="col-lg-4">
                        <div class="blog_right_sidebar">
                            <aside class="single_sidebar_widget search_widget">
                                <form action="#">
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control"
                                                   placeholder="Search Keyword"
                                                   onfocus="this.placeholder=''"
                                                   onblur="this.placeholder='Search Keyword'">
                                            <div class="input-group-append">
                                                <button class="btns" type="button"><i class="ti-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" type="submit">Search</button>
                                </form>
                            </aside>

                            <aside class="single_sidebar_widget post_category_widget">
                                <h4 class="widget_title">Categorii</h4>
                                <ul class="list cat-list">
                                    <li><a href="#" class="d-flex justify-content-between"><p>Domenii tehnice & IT</p><p>(37)</p></a></li>
                                    <li><a href="#" class="d-flex justify-content-between"><p>Arte & Design</p><p>(10)</p></a></li>
                                    <li><a href="#" class="d-flex justify-content-between"><p>Științe exacte</p><p>(03)</p></a></li>
                                    <li><a href="#" class="d-flex justify-content-between"><p>Business & Marketing</p><p>(11)</p></a></li>
                                    <li><a href="#" class="d-flex justify-content-between"><p>Dezvoltare personală</p><p>(21)</p></a></li>
                                    <li><a href="#" class="d-flex justify-content-between"><p>Cursuri Practice & Hobby-uri</p><p>(09)</p></a></li>
                                </ul>
                            </aside>

                            <!-- Evenimente Notabile -->
                            <aside class="single_sidebar_widget popular_post_widget">
                                <h3 class="widget_title" style="color: #2d2d2d;">Evenimente Notabile</h3>
                                <!-- Exemplu post -->
                                <div class="media post_item">
                                    <img class="test" src="~/Content/assets/img/post/post_1.png" alt="post">
                                    <div class="media-body">
                                        <a href="/Blog/EvNotabil1"><h3 style="color: #2d2d2d;">Recunoaștere Tekwill în fiecare școală</h3></a>
                                        <p>5 Februarie, 2025</p>
                                    </div>
                                </div>
                                <div class="media post_item">
                                    <img class="test" src="~/Content/assets/img/post/profesori.jpg" alt="post">
                                    <div class="media-body">
                                        <a href="/Blog/EvNotabil2"><h3 style="color: #2d2d2d;">Investim în profesori</h3></a>
                                        <p>19 Februarie, 2025</p>
                                    </div>
                                </div>
                                <div class="media post_item">
                                    <img class="test" src="~/Content/assets/img/post/eradigitala.png" alt="post">
                                    <div class="media-body">
                                        <a href="/Blog/EvNotabil3"><h3 style="color: #2d2d2d;">Copiii în era digitală</h3></a>
                                        <p>18 Decembrie, 2024</p>
                                    </div>
                                </div>
                                <div class="media post_item">
                                    <img class="test" src="~/Content/assets/img/post/romold.jpg" alt="post">
                                    <div class="media-body">
                                        <a href="/Blog/EvNotabil4"><h3 style="color: #2d2d2d;">Colaborare România – Moldova</h3></a>
                                        <p>23 Octombrie, 2024</p>
                                    </div>
                                </div>
                            </aside>

                            <aside class="single_sidebar_widget tag_cloud_widget">
                                <h4 class="widget_title">Taguri populare</h4>
                                <ul class="list">
                                    <li><a href="#">programare</a></li>
                                    <li><a href="#">design</a></li>
                                    <li><a href="#">marketing</a></li>
                                    <li><a href="#">blogging</a></li>
                                    <li><a href="#">psihologie</a></li>
                                    <li><a href="#">public speaking</a></li>
                                    <li><a href="#">muzică</a></li>
                                    <li><a href="#">fotografie</a></li>
                                </ul>
                            </aside>

                            <aside class="single_sidebar_widget newsletter_widget">
                                <h4 class="widget_title">Newsletter</h4>
                                <form action="#">
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Enter email" required>
                                    </div>
                                    <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" type="submit">Subscribe</button>
                                </form>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Blog & Sidebar End -->
    </main>

    @Html.Partial("_Footer")

    <!-- Scroll Up -->
    <div id="back-top">
        <a title="Go to Top" href="#"><i class="fas fa-level-up-alt"></i></a>
    </div>

    <!-- JS Scripts -->
    <script src="~/Content/assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/jquery.slicknav.min.js"></script>
    <script src="~/Content/assets/js/owl.carousel.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/wow.min.js"></script>
    <script src="~/Content/assets/js/animated.headline.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.js"></script>
    <script src="~/Content/assets/js/gijgo.min.js"></script>
    <script src="~/Content/assets/js/jquery.nice-select.min.js"></script>
    <script src="~/Content/assets/js/jquery.sticky.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/jquery.countdown.min.js"></script>
    <script src="~/Content/assets/js/hover-direction-snake.min.js"></script>
    <script src="~/Content/assets/js/contact.js"></script>
    <script src="~/Content/assets/js/jquery.form.js"></script>
    <script src="~/Content/assets/js/jquery.validate.min.js"></script>
    <script src="~/Content/assets/js/mail-script.js"></script>
    <script src="~/Content/assets/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Content/assets/js/plugins.js"></script>
    <script src="~/Content/assets/js/main.js"></script>

    @Scripts.Render("~/Scripts/js")
</body>
</html>
