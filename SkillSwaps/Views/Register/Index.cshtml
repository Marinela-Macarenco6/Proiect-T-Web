@model Domain.User.UserRegData

@{
    Layout = null;
    ViewBag.Title = "Register";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register | YourApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/assets/css/style.css" />
</head>
<body>
    <main class="login-body">
        <form class="form-default" id="registerForm" method="post" action="@Url.Action("Register", "Register")">
            @Html.AntiForgeryToken()

            <div class="login-form">
                <div class="logo-login">
                    <img src="~/Content/assets/img/logo.png" alt="Logo" />
                </div>

                <h2>Register Here</h2>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@modelError.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <div class="form-input inputForm">
                    <label for="FullName">Full Name</label>
                    <input type="text" class="form-control" placeholder="Full Name" id="FullName" name="FullName" value="@Model.FullName" />
                </div>

                <div class="form-input inputForm">
                    <label for="UserName">User Name</label>
                    <input type="text" class="form-control" placeholder="User Name" id="UserName" name="UserName" value="@Model.UserName" />
                </div>

                <div class="form-input inputForm">
                    <label for="Email">Email Address</label>
                    <input type="email" class="form-control" placeholder="Email" id="Email" name="Email" value="@Model.Email" />
                </div>

                <div class="form-input inputForm">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" placeholder="Password" id="Password" name="Password" />
                </div>

                <div class="form-input inputForm">
                    <label for="ConfirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" placeholder="Confirm Password" id="ConfirmPassword" name="ConfirmPassword" />
                </div>

                <div class="form-input pt-30">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>

                <div class="pt-3">
                    <a href="/Login/Index" class="registration">Already have an account? Login</a>
                </div>
            </div>
        </form>
    </main>
</body>
</html>
