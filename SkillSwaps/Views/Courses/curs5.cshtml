    ViewBag.Title = "Index";
}

@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Course Details - Online Learning Platform</title>
    <meta name="description" content="Explore our comprehensive online courses and start learning today!">
    <meta name="keywords" content="online courses, e-learning, education, learning platform">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    @Styles.Render("~/Content/assets/css")
</head>

<  @Html.Partial("_Header")

<section class="slider-area slider-area2">
    <div class="slider-active">
        <!-- Single Slider -->
        <div class="single-slider slider-height2">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-11 col-md-12">
                        <div class="hero__caption hero__caption2">
                            <h1 data-animation="bounceIn" data-delay="0.2s">UX/UI Design</h1>
                            <!-- breadcrumb Start-->
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                    <li class="breadcrumb-item"><a href="#">Cursuri</a></li>
                                </ol>
                            </nav>
                            <!-- breadcrumb End -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="service-details" class="service-details section">
    <div class="container">
        <div class="row gy-5">

            <div class="col-lg-8">
                <div class="service-main-content">
                    <div class="service-header">
                        <h1>UX/UI Design Essentials</h1>
                        <div class="service-meta">
                            <span><i class="bi bi-award"></i> Online Course</span>
                            <span><i class="bi bi-clock"></i> 10 Weeks</span>
                            <span><i class="bi bi-star-fill"></i> 4.9/5 Rating</span>
                        </div>
                        <p class="lead">
                            Learn how to create intuitive and engaging digital experiences through user research, wireframing, prototyping, and visual design principles.
                        </p>
                    </div>

                    <div class="service-tabs">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#service-details-tab-1">
                                    <i class="bi bi-info-circle"></i> Overview
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#service-details-tab-2">
                                    <i class="bi bi-diagram-3"></i> Curriculum
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#service-details-tab-3">
                                    <i class="bi bi-graph-up-arrow"></i> Benefits
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="service-details-tab-1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="content-block">
                                            <h3>Course Introduction</h3>
                                            <p>Master the fundamentals of UX and UI design and apply them to real-world projects. You’ll learn how to research user behavior and design seamless, visually appealing interfaces.</p>
                                            <p>This course is ideal for beginners or anyone looking to enter the design industry with practical, portfolio-ready experience.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <img src="~/Content/assets/img/gallery/ui6.jpg" alt="Web Development" class="img-fluid rounded">
                                    </div>
                                </div>
                                <div class="swiper mySwiper" style="padding: 20px 0;">
                                    <div class="swiper-wrapper">

                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/ui7.jpeg" alt="Imagine 2" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/ui3.png" alt="Imagine 3" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/ui4.jfif" alt="Imagine 4" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/ui5.jfif" alt="Imagine 5" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/ui1.jfif" alt="Imagine 6" style="width: 100%; border-radius: 8px;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="service-details-tab-2">
                                <div class="process-timeline">
                                    <div class="timeline-item">
                                        <div class="timeline-marker">01</div>
                                        <div class="timeline-content">
                                            <h4>UX Research Fundamentals</h4>
                                            <p>Learn how to conduct user interviews, surveys, and usability testing to inform your design decisions.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">02</div>
                                        <div class="timeline-content">
                                            <h4>Wireframing & Prototyping</h4>
                                            <p>Create wireframes and interactive prototypes using tools like Figma or Adobe XD.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">03</div>
                                        <div class="timeline-content">
                                            <h4>Visual Design Principles</h4>
                                            <p>Understand layout, color theory, typography, and iconography for polished UI designs.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">04</div>
                                        <div class="timeline-content">
                                            <h4>Design Systems & Handoff</h4>
                                            <p>Build scalable design systems and collaborate with developers for seamless project delivery.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="service-details-tab-3">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-graph-up"></i>
                                            </div>
                                            <h4>Industry-Driven Skills</h4>
                                            <p>Learn the tools and processes that top tech companies use in their design workflows.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-people"></i>
                                            </div>
                                            <h4>Mentor Guidance</h4>
                                            <p>Receive feedback from seasoned UX/UI designers throughout your learning journey.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-cash-coin"></i>
                                            </div>
                                            <h4>Accessible Pricing</h4>
                                            <p>Get premium design training at an affordable rate.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-bar-chart-line"></i>
                                            </div>
                                            <h4>Progress Tracking</h4>
                                            <p>Monitor your advancement with real-time feedback and dashboards.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="service-sidebar">
                    <div class="action-card">
                        <h3>Enroll in the Course</h3>
                        <p>Begin your UX/UI journey with this immersive online course.</p>
                        <a href="#" class="btn-primary">Enroll Now</a>
                        <span class="guarantee"><i class="bi bi-shield-check"></i> Certificate Included</span>
                    </div>

                    <div class="service-features-list">
                        <h4>Course Features</h4>
                        <ul>
                            <li><i class="bi bi-megaphone"></i><div><h5>Expert Instructors</h5><p>Learn from professionals with real-world experience</p></div></li>
                            <li><i class="bi bi-search"></i><div><h5>Hands-on Projects</h5><p>Practice what you learn with guided assignments</p></div></li>
                            <li><i class="bi bi-newspaper"></i><div><h5>Downloadable Resources</h5><p>Access materials anytime</p></div></li>
                            <li><i class="bi bi-envelope-paper"></i><div><h5>Support Forums</h5><p>Get help and connect with peers</p></div></li>
                            <li><i class="bi bi-graph-up-arrow"></i><div><h5>Progress Reports</h5><p>Track your learning journey</p></div></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@Html.Partial("_Footer")
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
</body>
</html>

