@{
    Layout = null;
    ViewBag.Title = "Index";
}

@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Course Details - Online Learning Platform</title>
    <meta name="description" content="Explore our comprehensive online courses and start learning today!">
    <meta name="keywords" content="online courses, e-learning, education, learning platform">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    @Styles.Render("~/Content/assets/css")
</head>

@Html.Partial("_Header")

<section class="slider-area slider-area2">
    <div class="slider-active">
        <!-- Single Slider -->
        <div class="single-slider slider-height2">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-11 col-md-12">
                        <div class="hero__caption hero__caption2">
                            <h1 data-animation="bounceIn" data-delay="0.2s">Limba Engleză pentru Copii</h1>
                            <!-- breadcrumb Start-->
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                    <li class="breadcrumb-item"><a href="#">Cursuri</a></li>
                                </ol>
                            </nav>
                            <!-- breadcrumb End -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="service-details" class="service-details section">
    <div class="container">
        <div class="row gy-5">

            <div class="col-lg-8">
                <div class="service-main-content">
                    <div class="service-header">
                        <h1>Curs de Limba Engleză pentru Copii (4-10 ani)</h1>
                        <div class="service-meta">
                            <span><i class="bi bi-award"></i> Curs Online</span>
                            <span><i class="bi bi-clock"></i> 8 săptămâni</span>
                            <span><i class="bi bi-star-fill"></i> 4.9/5 Recenzii</span>
                        </div>
                        <p class="lead">
                            Un curs interactiv și distractiv pentru a învăța limba engleză prin jocuri, cântece și activități educative. Creat special pentru copiii cu vârste între 4 și 10 ani.
                        </p>
                    </div>

                    <div class="service-tabs">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#service-details-tab-1">
                                    <i class="bi bi-info-circle"></i> Prezentare Generală
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#service-details-tab-2">
                                    <i class="bi bi-diagram-3"></i> Curriculum
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#service-details-tab-3">
                                    <i class="bi bi-graph-up-arrow"></i> Beneficii
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="service-details-tab-1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="content-block">
                                            <h3>Despre Curs</h3>
                                            <p>Copiii învață limba engleză prin activități interactive care stimulează creativitatea și încrederea în sine.</p>
                                            <p>Fiecare lecție este concepută pentru a menține atenția celor mici, cu jocuri, cântece și povești adaptate vârstei lor.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <img src="~/Content/assets/img/gallery/eng7.jpeg" alt="Web Development" class="img-fluid rounded">
                                    </div>
                                </div>
                                <div class="swiper mySwiper" style="padding: 20px 0;">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/eng1.jpg" alt="Imagine 1" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/eng2.png" alt="Imagine 2" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/eng3.png" alt="Imagine 3" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/eng4.png" alt="Imagine 4" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/eng5.jfif" alt="Imagine 5" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/eng6.jpg" alt="Imagine 6" style="width: 100%; border-radius: 8px;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="service-details-tab-2">
                                <div class="process-timeline">
                                    <div class="timeline-item">
                                        <div class="timeline-marker">01</div>
                                        <div class="timeline-content">
                                            <h4>Alfabetul și Numerele</h4>
                                            <p>Copiii învață să recunoască și să pronunțe literele și cifrele în limba engleză.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">02</div>
                                        <div class="timeline-content">
                                            <h4>Animale și Culori</h4>
                                            <p>Identificarea animalelor și a culorilor prin jocuri și imagini distractive.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">03</div>
                                        <div class="timeline-content">
                                            <h4>Saluturi și Emoții</h4>
                                            <p>Învață cum să salute și să își exprime emoțiile în engleză.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">04</div>
                                        <div class="timeline-content">
                                            <h4>Povești și Cântece</h4>
                                            <p>Dezvoltarea vocabularului prin povești scurte și cântece vesele.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="service-details-tab-3">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-graph-up"></i>
                                            </div>
                                            <h4>Dezvoltare Lingvistică</h4>
                                            <p>Îmbunătățirea vocabularului și pronunției prin metode adaptate vârstei.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-people"></i>
                                            </div>
                                            <h4>Interacțiune Socială</h4>
                                            <p>Cursurile includ activități de grup pentru a stimula comunicarea.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-cash-coin"></i>
                                            </div>
                                            <h4>Accesibil și Flexibil</h4>
                                            <p>Cursuri online pe care le poți urma oricând, oriunde.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-bar-chart-line"></i>
                                            </div>
                                            <h4>Progres Monitorizat</h4>
                                            <p>Părinții pot urmări progresul copilului în timp real.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

            <div class="col-lg-4">
                <div class="service-sidebar">
                    <div class="action-card">
                        <h3>Înscrie-te la Curs</h3>
                        <p>Oferă copilului tău un start excelent în învățarea limbii engleze!</p>
                        <a href="#" class="btn-primary">Înscriere</a>
                        <span class="guarantee"><i class="bi bi-shield-check"></i> Certificat de Participare</span>
                    </div>

                    <div class="service-features-list">
                        <h4>Caracteristici Curs</h4>
                        <ul>
                            <li><i class="bi bi-megaphone"></i><div><h5>Instructori cu Experiență</h5><p>Profesori specializați în lucrul cu copiii</p></div></li>
                            <li><i class="bi bi-search"></i><div><h5>Activități Interactive</h5><p>Învață prin joacă și implicare activă</p></div></li>
                            <li><i class="bi bi-newspaper"></i><div><h5>Materiale Descărcabile</h5><p>Fișe de lucru și cântece pentru acasă</p></div></li>
                            <li><i class="bi bi-envelope-paper"></i><div><h5>Comunitate de Părinți</h5><p>Comunicare și sprijin între părinți</p></div></li>
                            <li><i class="bi bi-graph-up-arrow"></i><div><h5>Rapoarte de Progres</h5><p>Vezi evoluția copilului pas cu pas</p></div></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@Html.Partial("_Footer")
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

</body>
</html>
<script>
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 3,
        spaceBetween: 20,
        loop: true,
        autoplay: {
            delay: 2500,
            disableOnInteraction: false,
        },
    });
</script>

<script src="~/Scripts/bootstrap.bundle.min1.js"></script>
<script src="~/Scripts/validate.js"></script>
<script src="~/Scripts/aos.js"></script>
<script src="~/Scripts/swiper-bundle.min.js"></script>
<script src="~/Scripts/glightbox.min.js"></script>
<script src="~/Scripts/imagesloaded.pkgd.min.js"></script>
<script src="~/Scripts/isotope.pkgd.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init();
</script>
