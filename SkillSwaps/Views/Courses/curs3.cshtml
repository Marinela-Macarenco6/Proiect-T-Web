@using System.Web.Optimization
<!DOCTYPE html>
<html lang="ro">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Detalii Curs - Platformă de Învățare Online</title>
    <meta name="description" content="Descoperă cursurile noastre online complete și începe să înveți chiar azi!">
    <meta name="keywords" content="cursuri online, e-learning, educație, platformă de învățare">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    @Styles.Render("~/Content/assets/css")
</head>

<div class="header-area header-transparent">
    <div class="main-header ">
        <div class="header-bottom  header-sticky">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-2">
                        <div class="logo">
                            <a href="/Home/Index"><img src="~/Content/assets/img/logo/logo.png" alt=""></a>
                        </div>
                    </div>
                    <div class="col-xl-10 col-lg-10">
                        <div class="menu-wrapper d-flex align-items-center justify-content-end">
                            <div class="main-menu d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li class="active"><a href="~/Home/Index">Acasă</a></li>
                                        <li class="active"><a href="~/Courses/Index">Cursuri</a></li>
                                        <li class="active"><a href="~/About/Index">Despre Noi</a></li>
                                        <li class="active"><a href="~/Blog/Index">Blog</a></li>
                                        <li class="active"><a href="~/Contact/Index">Contacte</a></li>
                                        <li class="button-header margin-left "><a href="~/Register/Index" class="btn">Înregistrare</a></li>
                                        <li class="button-header"><a href="~/Login/Login" class="btn btn3">Conectează-te</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="slider-area slider-area2">
    <div class="slider-active">
        <div class="single-slider slider-height2">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-11 col-md-12">
                        <div class="hero__caption hero__caption2">
                            <h1 data-animation="bounceIn" data-delay="0.2s">Șah</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Acasă</a></li>
                                    <li class="breadcrumb-item"><a href="#">Cursuri</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="service-details" class="service-details section">
    <div class="container">
        <div class="row gy-5">
            <div class="col-lg-8">
                <div class="service-main-content">
                    <div class="service-header">
                        <h1>Curs complet de Șah</h1>
                        <div class="service-meta">
                            <span><i class="bi bi-award"></i> Curs Online</span>
                            <span><i class="bi bi-clock"></i> 8 săptămâni</span>
                            <span><i class="bi bi-star-fill"></i> 5/5 Recenzii</span>
                        </div>
                        <p class="lead">
                            Învață șah de la zero și devino un jucător strategic. Acest curs acoperă regulile jocului, tactici, deschideri și finaluri într-un mod interactiv.
                        </p>
                    </div>

                    <div class="service-tabs">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#service-details-tab-1">
                                    <i class="bi bi-info-circle"></i> Prezentare generală
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#service-details-tab-2">
                                    <i class="bi bi-diagram-3"></i> Curriculum
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#service-details-tab-3">
                                    <i class="bi bi-graph-up-arrow"></i> Beneficii
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="service-details-tab-1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="content-block">
                                            <h3>Introducere în șah</h3>
                                            <p>Familiarizează-te cu tabla de șah, piesele și mișcările acestora. Învață regulile fundamentale ale jocului și cum să câștigi.</p>
                                            <p>Perfect pentru începători, dar și pentru cei care vor să-și consolideze cunoștințele și strategia.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <img src="~/Content/assets/img/gallery/sah3.jpg" alt="Șah" class="img-fluid rounded">
                                    </div>
                                </div>
                                <div class="swiper mySwiper" style="padding: 20px 0;">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/sah2.jpg" alt="Șah 1" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/sah8.jfif" alt="Șah 2" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/sah4.jpeg" alt="Șah 3" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/sah5.jpg" alt="Șah 4" style="width: 100%; border-radius: 8px;">
                                        </div>
                                        <div class="swiper-slide">
                                            <img src="~/Content/assets/img/gallery/sah6.jpg" alt="Șah 5" style="width: 100%; border-radius: 8px;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="service-details-tab-2">
                                <div class="process-timeline">
                                    <div class="timeline-item">
                                        <div class="timeline-marker">01</div>
                                        <div class="timeline-content">
                                            <h4>Reguli și mutări</h4>
                                            <p>Învață cum se mută fiecare piesă și ce înseamnă șah-mat, remiză sau pat.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">02</div>
                                        <div class="timeline-content">
                                            <h4>Deschideri clasice</h4>
                                            <p>Explorează cele mai populare deschideri și învață cum să câștigi avantaj din primele mutări.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">03</div>
                                        <div class="timeline-content">
                                            <h4>Tactici și combinații</h4>
                                            <p>Atacuri duble, pioni liberi, sacrificii – tot ce trebuie să știi pentru a deveni imprevizibil.</p>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-marker">04</div>
                                        <div class="timeline-content">
                                            <h4>Finaluri</h4>
                                            <p>Transformă avantajul în victorie cu tehnici clare de final: rege+pion vs. rege, turn contra turn etc.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="service-details-tab-3">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-brain"></i>
                                            </div>
                                            <h4>Dezvoltare cognitivă</h4>
                                            <p>Îmbunătățește-ți concentrarea, gândirea logică și memoria.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-controller"></i>
                                            </div>
                                            <h4>Joc strategic</h4>
                                            <p>Învață să iei decizii pe termen lung și să anticipezi mutările adversarului.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-laptop"></i>
                                            </div>
                                            <h4>Platformă online</h4>
                                            <p>Exersezi partide direct din aplicație, împotriva jucătorilor reali sau AI.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="benefit-card">
                                            <div class="benefit-icon">
                                                <i class="bi bi-trophy"></i>
                                            </div>
                                            <h4>Certificare</h4>
                                            <p>Primești certificat de participare după finalizarea cursului.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-lg-4">
                <div class="service-sidebar">
                    <div class="action-card">
                        <h3>Înscrie-te la curs</h3>
                        <p>Învață șah și transformă fiecare mutare într-o strategie câștigătoare.</p>
                        <a href="#" class="btn-primary">Înscrie-te acum</a>
                        <span class="guarantee"><i class="bi bi-shield-check"></i> Certificat inclus</span>
                    </div>

                    <div class="service-features-list">
                        <h4>Caracteristici curs</h4>
                        <ul>
                            <li><i class="bi bi-person-check"></i><div><h5>Instructori experimentați</h5><p>Predat de antrenori cu experiență în competiții</p></div></li>
                            <li><i class="bi bi-award"></i><div><h5>Teste și puzzle-uri</h5><p>Exerciții practice după fiecare lecție</p></div></li>
                            <li><i class="bi bi-book"></i><div><h5>Materiale PDF</h5><p>Ghiduri și exemple descărcabile</p></div></li>
                            <li><i class="bi bi-question-circle"></i><div><h5>Asistență 24/7</h5><p>Întrebări și răspunsuri în platformă</p></div></li>
                            <li><i class="bi bi-joystick"></i><div><h5>Simulări interactive</h5><p>Joacă și analizează partide reale</p></div></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@Html.Partial("_Footer")
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

</body>
</html>
<script>
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 3,
        spaceBetween: 20,
        loop: true,
        autoplay: {
            delay: 2500,
            disableOnInteraction: false,
        },
    });
</script>

